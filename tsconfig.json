{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["ES2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    // "paths": { Paths are not working when published...
    //   "@ezweave/*": ["*"]
    // },
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "types": ["node", "jest"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", ".eslintrc.js"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
