{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "paths": {
      "@ezweave/*": ["*"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node",
    "lib": ["ES2019"],
    "module": "commonjs",
    "target": "ES2019",
    "declarationMap": true,
    "noImplicitAny": false,
    "outDir": "dist"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", ".eslintrc.js"]
}
